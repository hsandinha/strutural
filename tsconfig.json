{
  "compilerOptions": {
    "target": "ES2017", // Alvo mais moderno para resolver os erros de 'private identifiers'
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Ignora erros de tipo dentro de node_modules
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true, // Resolve o problema de importação do 'firebase-admin'
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
